{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": ["ESNext", "DOM"],
      "allowJs": true,
      "jsx": "react-native",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "build",
      "skipLibCheck": true
    },
    "include": ["src/**/*", "custom.d.ts"],
    "exclude": ["**/*.test.ts"]
  }  